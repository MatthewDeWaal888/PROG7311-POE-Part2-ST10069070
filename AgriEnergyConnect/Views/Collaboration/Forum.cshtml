
@{
    ViewData["Title"] = "Forum";
}

@section Styles {

    <style type="text/css">
    
        body {
            background-image: url('../images/pattern1.png');
            
        }

        .content {
            color: #f0f0f0;
        }

        a {
            color: #e2c072;
        }


        .text-field {
            background-color: #2a2a2a;
            color: white;
            border-radius: 8px;
            height: 41px;
        }

        #txtDiscussion {
            width: 100%;
            height: 300px;
            background-color: #363636;
            color: white;
            font-family: Calibri;
        }
        
    </style>

}

<div style="margin-top: 16px;">
<div class="content">
    <div style="background-color: #f3f3f3; color: black; padding-left: 8px; padding-top: 8px; padding-right: 8px; border-radius: 8px; padding-bottom: 8px">
    <h1>Forum: Discussion Board</h1>
    <p>Feel free to discuss and collaborate with the Agri-Energy Connect members and enthusiasts.</p>
    <textarea id="txtDiscussion"></textarea>
    <button class="btn-class btn-small">Post</button>
    <button class="btn-class btn-small">Clear</button>
    </div>
</div>
</div>
