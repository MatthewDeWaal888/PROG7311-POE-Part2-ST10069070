
@{
    ViewData["Title"] = "Status";
}

@section Styles {

    <style type="text/css">
    
        #background {
            background-image: url('../images/sand-texture1.png');
        }


        .content {
            color: #f0f0f0;
        }

        .content2 {
            
            background-color: white;
            background-image: url('../images/grass-texture1.png');
            border-radius: 16px;
            border-color: white;
            border-width: 6px;
            border-style: solid;

            width: 100%;
            height: 600px;

            padding-left: 32px;
            padding-top: 32px;
            padding-right: 32px;
            padding-bottom: 32px;
            color: black;
            font-size: 20px;
        }

        
    </style>

}



<div style="margin-top: 32px;">
<div class="content">
<h1>Status</h1>


<div class="content2">
@{
    var query = this.Context.Request.Query;

    if(query["ActionName"] == "Login" && query["StatusCode"] == "1")
    {
        <p>Login Successful</p>
    }

    if (query["ActionName"] == "Login" && query["StatusCode"] == "2")
    {
        <p>Login Failed</p>
    }
}
</div>

</div>
</div>